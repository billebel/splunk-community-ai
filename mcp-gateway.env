# Catalyst MCP Gateway Environment Configuration
# Copy this to .env and customize for your environment

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_HOST=0.0.0.0
MCP_PORT=8000
LOG_LEVEL=INFO

# =============================================================================
# Splunk Configuration
# =============================================================================

# Basic Splunk Connection (choose one authentication method)
SPLUNK_HOST=your-splunk-host.example.com
SPLUNK_PORT=8089

# Method 1: Token Authentication (recommended)
SPLUNK_TOKEN=your-splunk-hec-token

# Method 2: Username/Password Authentication
SPLUNK_USERNAME=your-username
SPLUNK_PASSWORD=your-password

# =============================================================================
# OAuth Configuration (for OAuth-enabled Splunk instances)
# =============================================================================
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/oauth/callback
OAUTH_SCOPE=splunk_search,splunk_admin

# =============================================================================
# SAML/SSO Configuration (for enterprise environments)
# =============================================================================
SAML_SSO_URL=https://your-sso-provider.example.com/saml/sso
SAML_ENTITY_ID=your-splunk-entity-id
SAML_CERTIFICATE_PATH=/path/to/saml/certificate.pem

# =============================================================================
# Knowledge Packs Configuration
# =============================================================================

# Core packs to load at startup (comma-separated)
CORE_PACKS=splunk_enterprise,splunk_cloud

# Custom packs directory
PACKS_DIRECTORY=/app/knowledge-packs

# Git pack loading (for dynamic pack loading)
GIT_PACKS_ENABLED=true
GIT_PACKS_CACHE_DIR=/app/git-packs

# =============================================================================
# Security Configuration
# =============================================================================

# API Key for MCP server access (optional)
API_KEY=your-secure-api-key

# CORS Origins (comma-separated, * for all)
CORS_ORIGINS=*

# Session secret for OAuth flows
SESSION_SECRET=your-random-session-secret

# =============================================================================
# Performance & Scaling
# =============================================================================

# Redis configuration (for session storage and caching)
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Connection pooling
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable debug mode
DEBUG=false

# Detailed logging
VERBOSE_LOGGING=false

# Pack reloading (development only)
AUTO_RELOAD_PACKS=false

# =============================================================================
# Docker MCP Gateway Specific
# =============================================================================

# Gateway integration
MCP_GATEWAY_ENABLED=true
MCP_GATEWAY_PORT=8080

# Server registration
MCP_SERVER_NAME=splunk-catalyst
MCP_SERVER_DESCRIPTION=Catalyst MCP server for Splunk integration

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# Example Configurations for Different Environments
# =============================================================================

# Development Environment Example:
# SPLUNK_HOST=localhost
# SPLUNK_TOKEN=dev-token-123
# DEBUG=true
# AUTO_RELOAD_PACKS=true

# Production Environment Example:
# SPLUNK_HOST=prod-splunk.company.com
# OAUTH_CLIENT_ID=prod-oauth-client
# REDIS_URL=redis://prod-redis:6379/0
# RATE_LIMIT_REQUESTS=50

# Enterprise SSO Environment Example:
# SPLUNK_HOST=enterprise-splunk.company.com
# SAML_SSO_URL=https://sso.company.com/saml/sso
# SAML_ENTITY_ID=splunk-enterprise